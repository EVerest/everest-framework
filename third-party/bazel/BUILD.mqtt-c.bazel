load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")


filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)

cmake(
    name = "libmqtt",
    cache_entries = {
        "CMAKE_C_FLAGS": "-fPIC",
    },
    lib_source = ":all_srcs",
    out_static_libs = ["libmqttc.a"],
    visibility = [
        "//visibility:public",
    ],
)