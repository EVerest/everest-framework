load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)

cmake(
    name = "date",
    cache_entries = {
        "CMAKE_INSTALL_LIBDIR": "lib",
        "BUILD_TZ_LIB": "ON",
        "USE_SYSTEM_TZ_DB": "ON",
        "HAS_REMOTE_API": "0",
        "USE_AUTOLOAD": "0",
    },
    copts = ["-std=c++17"],
    lib_source = ":all_srcs",
    out_static_libs = ["libdate-tz.a"],
    visibility = [
        "//visibility:public",
    ],
)
