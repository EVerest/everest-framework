load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")


filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)

cmake(
    name = "date",
    lib_source = ":all_srcs",
    out_static_libs = ["libdate-tz.a"],
    cache_entries = {
      "BUILD_TZ_LIB": "ON",
      "HAS_REMOTE_API": "0",
      "USE_AUTOLOAD": "0",
      "USE_SYSTEM_TZ_DB": "ON",
    },
    visibility = [
        "//visibility:public",
    ],
)
